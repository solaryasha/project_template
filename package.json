{
  "name": "project_template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "parcel serve ./src/index.html --open",
    "build": "rm -rf dist && parcel build ./src/index.html --public-url /project_template --no-content-hash",
    "lint:html": "linthtml ./src",
    "lint:css": "stylelint **/*.scss",
    "lint:js": "eslint ./src",
    "lint": "concurrently \"npm run lint:html\" \"npm run lint:css\" \"npm run lint:js\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@linthtml/linthtml": "^0.8.0",
    "@parcel/transformer-sass": "^2.0.1",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "parcel": "^2.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0"
  }
}
